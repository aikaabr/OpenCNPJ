# Configuração de Paths
# Diretório base para todos os dados do projeto (deixe vazio para usar ./opencnpj_data)
OPENCNPJ_BASE_PATH=/tmp/opencnpj_demo

# Paths específicos (deixe vazio para usar o padrão relativo ao BASE_PATH)
OPENCNPJ_DOWNLOAD_PATH=
OPENCNPJ_EXTRACTED_DATA_PATH=
OPENCNPJ_PARQUET_DATA_PATH=
OPENCNPJ_OUTPUT_PATH=
OPENCNPJ_HASH_CACHE_PATH=
OPENCNPJ_TEMP_PATH=
OPENCNPJ_LOGS_PATH=
OPENCNPJ_BACKUP_PATH=
OPENCNPJ_CONFIG_PATH=

# Storage Configuration
STORAGE_TYPE=filesystem  # Options: filesystem, rclone, s3
STORAGE_ENABLED=true
FILESYSTEM_OUTPUT_PATH=

# Rclone Configuration (if STORAGE_TYPE=rclone)
RCLONE_REMOTE=
RCLONE_TRANSFERS=100
RCLONE_MAX_CONCURRENT=4

# S3 Configuration (if STORAGE_TYPE=s3)
S3_BUCKET_NAME=
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_PREFIX=

# DuckDB Configuration
DUCKDB_IN_MEMORY=true
DUCKDB_THREADS=0
DUCKDB_MEMORY_LIMIT=5GB
DUCKDB_ENGINE_THREADS=0
DUCKDB_PRESERVE_ORDER=false

# Processing Configuration
NDJSON_BATCH_SIZE=10000
NDJSON_NORMALIZE=false
NDJSON_WRITE_FILES=false
NDJSON_MAX_PARALLEL=8
DOWNLOADER_PARALLEL=6

# Web Interface
WEB_PORT=8080

# Analytics
ANALYTICS_ENABLED=true